@using AppData.Models
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.Build.Framework
@using PRO219_WebsiteBanDienThoai_FPhone.Areas.Admin.Filters

@functions {

    public LoginModel? LoginModel { get; set; }
    
}

@{
    ViewData["Title"] = "_SideNavPartialView";
}
<header id="header" class="header">
    <div class="navigation">
        <div class="container">
            <nav class="nav">
                <div class="nav__hamburger">
                    <svg>
                        <use xlink:href="/images/sprite.svg#icon-menu"></use>
                    </svg>
                </div>

                <div class="nav__logo">
                    <a asp-action="Index" asp-controller="Home">
                        PHONE
                    </a>
                </div>

                <div class="nav__menu">
                    <div class="menu__top">
                        <span class="nav__category">PHONE</span>
                        <a href="#" class="close__toggle">
                            <svg>
                                <use xlink:href="./images/sprite.svg#icon-cross"></use>
                            </svg>
                        </a>
                    </div>
                    <ul class="nav__list">
                        <li class="nav__item">
                            <a asp-action="Index" asp-controller="Home" class="nav__link ">Home</a>
                        </li>
                        <li class="nav__item">
                            <a href="#category" class="nav__link scroll-link">Category</a>
                        </li>
                        <li class="nav__item">
                            <a asp-action="BlogList" asp-controller="Home" class="nav__link ">Blog</a>
                        </li>
                        <li class="nav__item">
                            <a href="#contact" class="nav__link scroll-link">Contact</a>
                        </li>
                    </ul>
                </div>

                <div class="nav__icons">
                    @if (UserClaim.HasRole(User, "User"))
                    {
                        <a asp-action="Profile" asp-route-id="" asp-controller="Accounts" class="icon__item" id="">
                            <svg class="icon__user">
                                <use xlink:href="/images/sprite.svg#icon-user"></use>
                            </svg>
                        </a>
                    }
                    @if (!UserClaim.HasRole(User, "User"))
                    {
                        <a href="#" class="icon__item" id="login-btn">
                            <svg class="icon__user">
                                <use xlink:href="/images/sprite.svg#icon-user"></use>
                            </svg>
                        </a>
                    }
                    <a href="#" class="icon__item" id="search-btn">
                        <svg class="icon__search">
                            <use xlink:href="/images/sprite.svg#icon-search"></use>
                        </svg>
                    </a>

                    <a href="#" class="icon__item" id="cart-btn">
                        <svg class="icon__cart">
                            <use xlink:href="/images/sprite.svg#icon-shopping-basket"></use>
                        </svg>
                        <span id="cart__total">3</span>
                    </a>
                </div>
            </nav>
        </div>
    </div>


    <div class="auth">
       
        <form asp-action="Login" asp-controller="Accounts" class="login-form">
            <h3>Login Now</h3>
            @if (TempData.ContainsKey("ErrorMessage"))
            {
                <div class="alert alert-danger">
                    @TempData["ErrorMessage"]
                </div>
            }
            <input required type="text" asp-for="@LoginModel.UserName" name="UserName" placeholder="User name" class="box">
            <input required type="password" asp-for="@LoginModel.Password" name="Password" placeholder="your password" class="box">
            <p>forget your password <a href="#">Click Here</a></p>
            <p>don't have an account <a asp-controller="Accounts" asp-action="CreateAccount">Create now</a></p>
            <input type="submit" value="Login now" class="btn">
        </form>
    </div>
    <div class="searchF">
        <form action="" class="search-form">
            <input type="search" id="search-box" placeholder="Search here..">
            <label for="search-box" class="fas fa-search"></label>
        </form>
    </div>

    <div class="shopping-cart">
        <div class="box">
            <i class="fas fa-trash"></i>
            <img src="~/images/products/iPhone/iphone1.jpeg">
            <div class="content">
                <h3>iPhone</h3>
                <span class="price">$800.99/-</span>
                <span class="quantity">qty : 1</span>
            </div>
        </div>
        <div class="box">
            <i class="fas fa-trash"></i>
            <img src="~/images/products/sumsung/samsung3.jpeg">
            <div class="content">
                <h3>Samsung A22</h3>
                <span class="price">$350.99/-</span>
                <span class="quantity">qty : 1</span>
            </div>
        </div>
        <div class="box">
            <i class="fas fa-trash"></i>
            <img src="~/images/products/headphone/headphone3.jpeg">
            <div class="content">
                <h3>Boat</h3>
                <span class="price">$54.99/-</span>
                <span class="quantity">qty : 1</span>
            </div>
        </div>
        <div class="total">Total : $1354.69/-</div>
        <a asp-action="ShowCart" asp-controller="Accounts">
            PHONE
        </a>
    </div>

</header>